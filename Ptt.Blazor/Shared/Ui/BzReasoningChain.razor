@inherits LocalComponentBase

@{
    if (Chain is null) return;
}

<CascadingValue Value="Chain">
    <div class="reasoning-chain expression-context d-flex gap-2">
        <BzExpression Expression="@Chain.Beginning" />

        @foreach (var part in Chain.Parts)
        {
            <BzChainPart Part="part" />
        }
    </div>
</CascadingValue>

@code {
    [Parameter]
    public ReasoningChain Chain { get; set; } = null!;

    protected override void OnParametersSet() => SetUpdateSubscription(Chain);
}
